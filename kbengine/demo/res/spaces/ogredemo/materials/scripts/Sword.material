material sword/AxeTrail
{
	technique
	{
		pass
		{
			lighting off
			scene_blend add
			ambient vertexcolour
			//ambient 1 1 1 1
			//diffuse 0 0 0 1
			diffuse vertexcolour
			cull_hardware none
			cull_software none
			depth_write off
			
			texture_unit
			{
				texture axe_trail.dds
			}
		}
	}
}

material sword/swordMaterial
{
	technique
	{
		pass
		{
			lighting off
			cull_hardware none
			cull_software none
			scene_blend alpha_blend
			ambient vertexcolour
			diffuse 0 0 0 1
			alpha_rejection greater_equal 128

		}
	}
}
